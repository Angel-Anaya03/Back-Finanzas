<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/border_item">

    <!-- Número -->
    <TextView
        android:id="@+id/tvNumero"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="1"
        android:textSize="14sp"
        android:textColor="#2c3e50"
        android:gravity="center"
        android:background="#e8eaf6"
        android:padding="8dp" />

    <!-- TEA -->
    <TextView
        android:id="@+id/tvTea"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:text="9.00%"
        android:textSize="12sp"
        android:textColor="#2c3e50"
        android:gravity="center"
        android:background="#ffa726"
        android:padding="8dp" />

    <!-- TES -->
    <TextView
        android:id="@+id/tvTes"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="4.4030651%"
        android:textSize="12sp"
        android:textColor="#2c3e50"
        android:gravity="center"
        android:background="#e8eaf6"
        android:padding="8dp" />

    <!-- Plazo Gracia -->
    <TextView
        android:id="@+id/tvPlazoGracia"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:text="S"
        android:textSize="12sp"
        android:textColor="#2c3e50"
        android:gravity="center"
        android:background="#ffa726"
        android:padding="8dp" />

    <!-- Saldo Inicial -->
    <TextView
        android:id="@+id/tvSaldoInicial"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="1,440,000.00"
        android:textSize="11sp"
        android:textColor="#2c3e50"
        android:gravity="center"
        android:background="#e8eaf6"
        android:padding="8dp" />

    <!-- Interés -->
    <TextView
        android:id="@+id/tvInteres"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="(63,404.14)"
        android:textSize="11sp"
        android:textColor="#e74c3c"
        android:gravity="center"
        android:background="#ffa726"
        android:padding="8dp" />

    <!-- Cuota -->
    <TextView
        android:id="@+id/tvCuota"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="(63,404.14)"
        android:textSize="11sp"
        android:textColor="#e74c3c"
        android:gravity="center"
        android:background="#e8eaf6"
        android:padding="8dp" />

    <!-- Amortización -->
    <TextView
        android:id="@+id/tvAmortizacion"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="0.00"
        android:textSize="11sp"
        android:textColor="#2c3e50"
        android:gravity="center"
        android:background="#ffa726"
        android:padding="8dp" />

    <!-- Saldo Final -->
    <TextView
        android:id="@+id/tvSaldoFinal"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="1,440,000.00"
        android:textSize="11sp"
        android:textColor="#2c3e50"
        android:gravity="center"
        android:background="#e8eaf6"
        android:padding="8dp" />

</LinearLayout>
